_appSectionTitleColor = color__$title

_appSectionBaselineDesktopFontSize = font__$sectionBaselineDesktopFontSize
_appSectionBaselineMobileFontSize = font__$sectionBaselineMobileFontSize
_appSectionBaselineColor = color__$text

.AppSection
  font__useTextRegular font__$textFontSize
  &.AppSection-special
    color color__$sectionOdd
  &:not(.AppSection-no-padding)
    padding (AppSection__$mobileVerticalPadding)px 0
    .size-class-not-width-compact &
      padding (AppSection__$desktopVerticalPadding)px 0
    & .AppSection-title-with-baseline
      margin-bottom (AppSection__$mobileTitleWithBaselineBottomMargin)px
      .size-class-not-width-compact &
        margin-bottom (AppSection__$desktopTitleWithBaselineBottomMargin)px

.AppSection-even
  background-color color__$sectionEven

.AppSection-odd
  background-color color__$sectionOdd
  border-bottom 1px color__$greyLight solid

.AppSection-special
  background-color color__$blue

.AppSection-usefull-width-box
  layout__outerBox()

.AppSection-margin-box
  layout__innerBox()

.AppSection-inner-wrapper
  .size-class-not-width-compact &
    layout__centeredGridBox(layout__$gridSectionNumberOfColumns)
  .size-class-width-compact &
    layout__centeredGridBox(layout__$gridContainerNumberOfColumns)

.AppSection-title
  font__useTitleBold font__$sectionTitleMobileFontSize
  color _appSectionTitleColor
  line-height (font__$sectionTitleLineHeight)px
  .AppSection-special &
    color color__$sectionOdd
  .size-class-not-width-compact &
    font__useTitleBold font__$sectionTitleDesktopFontSize


.AppSection-baseline
  font__useTextRegular _appSectionBaselineMobileFontSize
  color _appSectionBaselineColor
  margin-bottom 15px
  line-height (font__$sectionBaselineLineHeight)px
  .AppSection-special &
    color color__$sectionOdd
  .AppSection-title + &
    margin-top 10px
  .size-class-not-width-compact &
    font__useTextRegular _appSectionBaselineDesktopFontSize
    margin-bottom 40px
